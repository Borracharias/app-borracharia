{
  "openapi": "3.0.0",
  "info": {
    "title": "Borracharia API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3003"
    }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "operationId": "authControllerLogin",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "access_token": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/pneus": {
      "get": {
        "operationId": "pneusControllerFindAll",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Pneu" }
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "pneusControllerCreate",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreatePneuDto"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "" }
        }
      }
    },
    "/servicos": {
      "get": {
        "operationId": "servicosControllerFindAll",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Servico" }
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "servicosControllerCreate",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateServicoDto"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "" }
        }
      }
    },
    "/pedidos": {
      "post": {
        "operationId": "pedidosControllerCreate",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreatePedidoDto"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "" }
        }
      }
    },
    "/clientes": {
      "get": {
        "operationId": "clientesControllerFindAll",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Cliente" }
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "clientesControllerCreate",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CreateClienteDto" }
            }
          }
        },
        "responses": {
          "201": { "description": "" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LoginDto": {
        "type": "object",
        "properties": {
          "email": { "type": "string" },
          "password": { "type": "string" }
        },
        "required": ["email", "password"]
      },
      "Pneu": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "tipo": { "type": "string" },
          "aro": { "type": "number" },
          "numeracao": { "type": "string" },
          "custo": { "type": "number" },
          "precoVenda": { "type": "number" },
          "quantidade": { "type": "number" }
        }
      },
      "CreatePneuDto": {
        "type": "object",
        "properties": {
          "tipo": { "type": "string" },
          "aro": { "type": "number" },
          "numeracao": { "type": "string" },
          "custo": { "type": "number" },
          "precoVenda": { "type": "number" },
          "quantidade": { "type": "number" }
        },
        "required": ["tipo", "aro", "numeracao", "custo", "precoVenda", "quantidade"]
      },
      "Servico": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "descricao": { "type": "string" },
          "preco": { "type": "number" },
          "observacao": { "type": "string" }
        }
      },
      "CreateServicoDto": {
        "type": "object",
        "properties": {
          "descricao": { "type": "string" },
          "preco": { "type": "number" },
          "observacao": { "type": "string" }
        },
        "required": ["descricao", "preco"]
      },
      "CreatePedidoDto": {
        "type": "object",
        "properties": {
          "clienteId": { "type": "string" },
          "itens": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "tipo": { "type": "string", "enum": ["PNEU", "SERVICO"] },
                "itemId": { "type": "string" },
                "quantidade": { "type": "number" },
                "precoUnitario": { "type": "number" },
                "garantia": {
                    "type": "object",
                    "properties": {
                        "hasWarranty": { "type": "boolean" },
                        "placa": { "type": "string" },
                        "quilometragem": { "type": "number" },
                        "condicao": { "type": "string" }
                    }
                }
              }
            }
          },
          "formaPagamento": { "type": "string" },
          "observacoes": { "type": "string" }
        },
        "required": ["clienteId", "itens"]
      },
      "Cliente": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "nome": { "type": "string" },
          "telefone": { "type": "string" }
        }
      },
      "CreateClienteDto": {
        "type": "object",
        "properties": {
          "nome": { "type": "string" },
          "telefone": { "type": "string" }
        },
        "required": ["nome", "telefone"]
      }
    }
  }
}
